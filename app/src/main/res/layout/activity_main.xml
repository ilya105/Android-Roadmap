<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/N1label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="First number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/N2label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="second number"
        app:layout_constraintEnd_toEndOf="@+id/N1label"
        app:layout_constraintTop_toBottomOf="@+id/N1label" />

    <TextView
        android:id="@+id/N3label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="third number"
        app:layout_constraintEnd_toEndOf="@+id/N2label"
        app:layout_constraintTop_toBottomOf="@+id/N2label" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/N3label" />

    <EditText
        android:id="@+id/txtn1amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:ems="5"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/N1label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/N1label" />

    <EditText
        android:id="@+id/txtn2amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/N2label"
        app:layout_constraintStart_toStartOf="@+id/txtn1amount"
        app:layout_constraintTop_toTopOf="@+id/N2label" />

    <EditText
        android:id="@+id/txtn3amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/N3label"
        app:layout_constraintStart_toStartOf="@+id/txtn2amount"
        app:layout_constraintTop_toTopOf="@+id/N3label" />

    <TextView
        android:id="@+id/txtmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="427dp" />

    <TextView
        android:id="@+id/txtmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        app:layout_constraintStart_toStartOf="@+id/txtmax"
        tools:layout_editor_absoluteY="486dp" />

    <TextView
        android:id="@+id/txteven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="even"
        app:layout_constraintStart_toStartOf="@+id/txtmin"
        tools:layout_editor_absoluteY="556dp" />

    <TextView
        android:id="@+id/txtodd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="odd"
        app:layout_constraintStart_toStartOf="@+id/txteven"
        tools:layout_editor_absoluteY="636dp" />

    <TextView
        android:id="@+id/txtavg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="388dp" />

</androidx.constraintlayout.widget.ConstraintLayout>